<section class="row featured-post-carousel">
  <center>
    <div class="item post">
      <img src="http://placehold.it/1970x500" alt="" class="img-responsive main-bg">
    </div>
  </center>
</section>
<section class="row content-wrap">
    <div class="container">
        <div class="row" id="post-masonry">
            <article class="col-sm-10 post post-masonry post-format-image">
                <div class="post-wrapper row">
                    <div class="post-excerpt row">
                        <h1 class="post-title">
                          Nuev Comentario
                        </h1>
                        <%= render 'form', comment: @comment %>
                      </div>
                    </div>
              </article>
          </div>
        </div>
</section>


