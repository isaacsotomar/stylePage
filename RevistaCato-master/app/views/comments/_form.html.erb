<%= form_with(model: comment, local: true) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <form class="form-horizontal">
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <%= form.text_field :email, id: :comment_email, autofocus: true, :class=>"form-control",   :placeholder=>"Email" %>
      </div>
    </div>
    <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Nick Name</label>
    <div class="col-sm-10">
      <%= form.text_field :nickname, id: :comment_nickname,:class=>"form-control" ,:placeholder=>"Nick name"  %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Opinion</label>
    <div class="col-sm-10">
      <%= form.text_area :opinion, id: :comment_opinion,:class=>"form-control" ,:placeholder=>"Descripcion", :rows=>"3" %>
    </div>
  </div>
  <div class="field" style="display: none;">
    <%= form.text_field :publication_id, id: :comment_publication_id,  :value =>params[:publication_id]  %>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit  "Comentar", :class=>"btn btn-default"%>
    </div>
  </div>


<% end %>
